<!-- Header Carousel -->
<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('https://blog.tradeshift.com/wp-content/uploads/2015/10/collaboration-illustration.jpg');"></div>
            <div class="carousel-caption">
                <a href="about" class="btn btn-primary">Find out more about what you can do</a>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('http://infocrestsolutions.com/wp-content/uploads/2016/06/host-an-intern-banner.jpg');"></div>
            <div class="carousel-caption">
                <a href="#" class="btn btn-primary">Internship Opportunities</a>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('http://www.knowledgespatial.com/wp-content/uploads/2016/03/careers-start.jpg');"></div>
            <div class="carousel-caption">
                <a href="#" class="btn btn-primary">Career Opportunities</a>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>

<!-- Page Content -->
<div class="container" ng-app="dashboardApp" ng-controller="DashboardCtrl">
    <!-- Marketing Icons Section -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                List of Companies
            </h1>
        </div>
        <div class="col-md-4" ng-repeat="u in users">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><h4>[[u.username]]</h4></center>
                </div>
                <div class="panel-body">
                    <center><img data-ng-src="[[u.imgsrc]]" width="330" height="240"></center>
                    <hr>
                    <center>
                        <span class="btn-group" ng-if="u.roomUrl !== undefined"> 
                            <a ng-href="/connect/[[u.username]]" class="btn btn-default">Learn More</a>
                            <a ng-href="[[u.roomUrl]]" class="btn btn-success active">Online</a>
                        </span>
                        <span class="btn-group" ng-if="u.roomUrl == undefined">
                            <a ng-href="/connect/[[u.username]]" class="btn btn-default">Learn More</a>
                            <button class="btn btn-danger">Offline</button>
                        </span>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->


<!-- Scripts -->
<script src='/js/jquery.min.js'></script>
<script src='/js/angular.min.js'></script>
<script src='/js/bootstrap.min.js'></script>
<script src='/js/controllers/dashboard.js'></script>